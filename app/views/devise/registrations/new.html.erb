<div class="login-holder">
  <div class="signup">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h2 class="sign-in">Sign Up</h2>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password(6 characters long)" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
      </div>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="actions">
        <%= f.submit "Sign up", :class => "login-btn" %>
      </div>
    <% end %>
    <div class="login-info">
      <h2 class="info-header">Hello, Friend!</h2>
      <p class="info-text">Welcome Back!</p>
      <%= link_to "Log in", new_session_path(resource_name), :class => "signup-btn" %>
    </div>
  </div>
</div>
