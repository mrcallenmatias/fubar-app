<div class="holder">
  <div class="forget-password-holder">
    <div class="forget-password">
      <h2 class="forget-heading">Forgot your password?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="actions">
          <%= f.submit "Reset Password", :class => "login-btn" %>
        </div>
      <% end %>
    </div>
    <div class="login-info">
      <h2 class="info-header">Hello, Friend!</h2>
      <%= link_to "Log in", new_session_path(resource_name), :class => "signup-btn" %>
      <%= link_to "Sign up", new_registration_path(resource_name), :class => "login-btn" %>
    </div>
  </div>
</div>
